<?xml version="1.0" encoding="UTF-8"?>
<project
    name="Phing Recipes"
    description="@todo"
    basedir="."
    default="help">

    <!-- *******************************************************************
	Properties
    *********************************************************************-->
	   
    <!-- A default path to this build script -->   
    <property name="recipes.path" value="${project.basedir}" />
    
    <!-- Resolve the path, in case it has been set by user -->
    <resolvepath propertyName="recipes.path" file="${recipes.path}"/>
    
    <!-- Include the primary properties -->
    <property file="${recipes.path}/recipes.properties" />
	     
    <!-- *******************************************************************
	Display the default available commands
    *********************************************************************-->
    <target name="help" description="Displays a list of all available targets to invoke">
	<!--
		A quick and dirty way to display all available targets in
		this build script.

		NOTE: targets with the property 'hidden="true"' will be ignored
		from the displayed list.
	-->

	<!-- Property with phing command to execute, for this build file -->
	<property name="listCommand" value="phing -f ${phing.file} -list -quiet" />
	
	<!-- invoke -->
	<exec command="${listCommand}" outputProperty="targetList" />

	<!-- output -->
	<echo>${nl}${targetList}</echo>
    </target>

    <!-- *******************************************************************
	Debug methods
    *********************************************************************-->    
    <target name="list-phing-paths" description="List all Phing paths">
	<!-- Phings paths -->
	<echo>${nl} application.startdir: ${application.startdir}</echo>
	<echo>${nl} phing.file: ${phing.file}</echo>
	<echo>${nl} phing.dir: ${phing.dir}</echo>
	<echo>${nl} phing.home: ${phing.home}</echo>
	<echo>${nl} phing.project.name: ${phing.project.name}</echo>
	<echo>${nl} project.basedir: ${project.basedir}</echo>
	<echo>${nl} user.home: ${user.home}</echo>
	
	<!-- Recipes paths -->
	<echo>${nl}</echo>
	<echo>${nl} recipes.path: ${recipes.path}</echo>
    </target>
</project>